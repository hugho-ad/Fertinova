<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_acc_tag_form_view" model="ir.ui.view">
        <field name="name">wizard.anal.acc.tag.form</field>
        <field name="model">analytic.acc.tag.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Analytic Accounts and Tags">                     
                <section>
                    <h4 class="p-3 mb-2 bg-warning text-dark">Warning:</h4>
                    <p class="text-danger">This action will replace the existent values of analytic accounts and tags, where the new values will be stored. The Equity, Assets and Liabilities Accounts will be not affected</p>
                </section>    
                <group>
                    <field name="analytic_account_id"/>
                    <field name="analytic_tag_id" widget="many2many_tags"/>
                </group>               
                <footer>
                    <button name="accept_button" type="object"
                            string="Accept" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>                
            </form>
        </field>
    </record>

    <act_window id="launch_analytic_acc_tag_wizard"
                name="Assign Analytic Accounts and Tags"
                src_model="account.move"
                res_model="analytic.acc.tag.wizard"
                view_mode="form"
                target="new"
                key2="client_action_multi"/>
</odoo>