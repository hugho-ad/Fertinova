<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--  TICKET 028  -  DEVELOPED BY SEBASTIAN MENDEZ  -  START   -->
    <!--Purchase Order Form Inherited where new column qty_to_receive was added-->
    <record id="purchase_order_line_inherited" model="ir.ui.view">
        <field name="name">purchase.order.line.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='product_qty']" position="after">
                <field name="qty_to_receive" attrs="{'invisible': [('state', 'not in', ['purchase', 'done'])]}"/>
            </xpath>        
        </field>
    </record>
    <!--  TICKET 028  -  DEVELOPED BY SEBASTIAN MENDEZ  -  END   -->
  </data>
</odoo> 