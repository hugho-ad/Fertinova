<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--Sales Order Form Inherited where new column qty_to_deliver was added-->
    <record id="sale_order_line_inherited" model="ir.ui.view">
        <field name="name">sale.order.line.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
            <field name="qty_to_deliver" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}" />
          </xpath>          
        </field>
    </record>

  </data>
</odoo>  